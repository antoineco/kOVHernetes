{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-apiserver",
    "namespace": "kube-system"
  },
  "spec": {
    "hostNetwork": true,
    "initContainers": [
      {
        "name": "concat-tls",
        "image": "busybox",
        "command": [
          "sh",
          "-c",
          "cat /etc/kubernetes/tls/server/apiserver.crt /etc/kubernetes/tls/ca.pem > /etc/kubernetes/tls/server/apiserverbundle.crt"
        ],
        "volumeMounts": [
          {
            "mountPath": "/etc/kubernetes/tls",
            "name": "k8s-tls",
            "readOnly": false
          }
        ]
      }
    ],
    "containers": [
      {
        "name": "kube-apiserver",
        "image": "__IMAGE__",
        "command": [
          "kube-apiserver",
          "--allow-privileged",
          "--anonymous-auth=false",
          "--apiserver-count=1",
          "--authorization-mode=AlwaysAllow",
          "--client-ca-file=/etc/kubernetes/tls/ca.pem",
          "--enable-admission-plugins=NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,DefaultTolerationSeconds,MutatingAdmissionWebhook,ValidatingAdmissionWebhook,ResourceQuota",
          "--etcd-cafile=/etc/kubernetes/tls/ca.pem",
          "--etcd-certfile=/etc/kubernetes/tls/client/etcd.crt",
          "--etcd-keyfile=/etc/kubernetes/tls/host.key",
          "--etcd-servers=https://localhost:2379",
          "--kubelet-certificate-authority=/etc/kubernetes/tls/ca.pem",
          "--kubelet-client-certificate=/etc/kubernetes/tls/client/apiserver.crt",
          "--kubelet-client-key=/etc/kubernetes/tls/host.key",
          "--profiling=false",
          "--service-account-lookup",
          "--service-cluster-ip-range=10.0.0.0/16",
          "--tls-cert-file=/etc/kubernetes/tls/server/apiserverbundle.crt",
          "--tls-private-key-file=/etc/kubernetes/tls/host.key"
        ],
        "ports": [
          {
            "containerPort": 8080,
            "name": "http"
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "host": "127.0.0.1",
            "port": "http",
            "path": "/healthz"
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 15
        },
        "volumeMounts": [
          {
            "mountPath": "/etc/kubernetes/tls",
            "name": "k8s-tls",
            "readOnly": true
          },
          {
            "mountPath": "/etc/ssl/certs",
            "name": "ssl-certs",
            "readOnly": true
          },
          {
            "mountPath": "/usr/share/ca-certificates",
            "name": "ca-certs",
            "readOnly": true
          }
        ]
      }
    ],
    "volumes": [
      {
        "hostPath": {
          "path": "/etc/kubernetes/tls"
        },
        "name": "k8s-tls"
      },
      {
        "hostPath": {
          "path": "/etc/ssl/certs"
        },
        "name": "ssl-certs"
      },
      {
        "hostPath": {
          "path": "/usr/share/ca-certificates"
        },
        "name": "ca-certs"
      }
    ]
  }
}
